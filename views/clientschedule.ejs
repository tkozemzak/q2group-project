   <body>
      <a href="/logout">Logout</a>
      <div class="table">
         <h2>Class Schedule for <%= results.name %></h2>
         <table>
            <thead>
               <tr>
                  <th>Start Time</th>
                  <th></th>
                  <th>Classes</th>
                  <th>Trainer</th>
                  <th>Duration</th>
               </tr>
            </thead>
            <tbody>
               <tr>
                  <td>Date:
                     <%= classes[0].date %>
                  </td>
               </tr>
               <% for(let i=0; i<classes.length; i++) { %>
                  <tr>
                     <td>
                        <%= classes[i].start_time %>
                     </td>
                     <td>
                        <form>
                           <a href="/signup/<%=classes[i].id%>" onclick="myFunction()">Sign up</a>
                        </form>

                     </td>
                     <td>
                        <%= classes[i].level %>
                     </td>
                     <td>Troy Amelotte</td>
                     <td>
                        <%= classes[i].duration %>
                     </td>
                  </tr>
                  <% } %>
            </tbody>

         </table>


      </div>

